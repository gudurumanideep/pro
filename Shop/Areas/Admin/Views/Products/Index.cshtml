@using Shop.Models;
@model IEnumerable<Products>
@{
}
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Type of Toys</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">&nbsp; Add New Toy</a>
    </div>
</div>
<br /><br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression: c=>c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(expression: c=>c.Price)
            </th> 
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <partial name="ButtonPArtial" model="@item.Id">
                </td>
            </tr>
        }
    </table>
</div>
